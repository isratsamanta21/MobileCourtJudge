<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="628.0" prefWidth="760.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulatingoperationsofarabmobilecourt.RequestEvidence">
    <!-- Title -->
    <Label layoutX="20" layoutY="20" style="-fx-font-weight: bold; -fx-font-size: 18;" text="REQUEST ADDITIONAL EVIDENCE" />

    <!-- Cases Table -->
    <TableView fx:id="casesTable" layoutX="43.0" layoutY="340.0" prefHeight="200" prefWidth="694.0">
        <columns>
            <TableColumn fx:id="caseIdCol" prefWidth="100" text="Case ID" />
            <TableColumn fx:id="descriptionCol" prefWidth="300" text="Description" />
            <TableColumn fx:id="statusCol" prefWidth="150" text="Evidence Status" />
            <TableColumn fx:id="officerCol" prefWidth="150" text="Assigned Officer" />
        </columns>
    </TableView>

    <!-- Selected Case -->
    <Label layoutX="20.0" layoutY="87.0" text="Selected Case:" />
    <Label fx:id="selectedCaseLabel" layoutX="120" layoutY="270" style="-fx-font-weight: bold;" />

    <!-- Evidence Request Form -->
    <GridPane hgap="10" layoutX="20" layoutY="300" vgap="10">
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <!-- Action Buttons -->
    <HBox layoutX="20" layoutY="500" spacing="20" />

    <!-- Status Message -->
    <Label fx:id="statusLabel" layoutX="20" layoutY="540" />
     <Button fx:id="backBtn" layoutX="550.0" layoutY="583.0" onAction="#onBackClicked" text="BACK" />
   <Button fx:id="backBtn1" layoutX="220.0" layoutY="570.0" onAction="#onBackClicked" text="SUBMIT REQUEST" />
   <TextField fx:id="locationField1" layoutX="117.0" layoutY="82.0" prefHeight="26.0" prefWidth="184.0" />
     <Label layoutX="28.0" layoutY="132.0" text="Evidence Type:" />
     <ComboBox fx:id="evidenceTypeCombo" layoutX="115.0" layoutY="127.0" prefHeight="26.0" prefWidth="184.0" />

        <Label layoutX="44.0" layoutY="171.0" text="Location:" />
     <TextField fx:id="locationField" layoutX="116.0" layoutY="175.0" prefHeight="26.0" prefWidth="184.0" />

        <Label layoutX="47.0" layoutY="212.0" text="Priority:" />
     <ComboBox fx:id="priorityCombo" layoutX="116.0" layoutY="216.0" prefHeight="26.0" prefWidth="184.0" />
   <TextField layoutX="117.0" layoutY="258.0" prefHeight="26.0" prefWidth="184.0" />

        <Label layoutX="56.0" layoutY="257.0" text="Reason:" \/>

</AnchorPane>
