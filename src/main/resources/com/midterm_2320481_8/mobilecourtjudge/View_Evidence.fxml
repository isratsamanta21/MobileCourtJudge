<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="608.0" prefWidth="814.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulatingoperationsofarabmobilecourt.ViewEvidence">
    <Label layoutX="20" layoutY="20" style="-fx-font-weight: bold; -fx-font-size: 18;" text="VIEW SUBMITTED EVIDENCE" />


    <TableView fx:id="evidenceTableView" layoutX="20.0" layoutY="160.0" prefHeight="195.0" prefWidth="722.0">
        <columns>
            <TableColumn fx:id="fileNameCol" prefWidth="200" text="File Name" />
            <TableColumn fx:id="typeCol" prefWidth="100" text="Type" />
            <TableColumn fx:id="dateCol" prefWidth="150" text="Submitted Date" />
            <TableColumn fx:id="sizeCol" prefWidth="100" text="Size" />
            <TableColumn fx:id="actionsCol" prefWidth="210" text="Actions" />
        </columns>
    </TableView>

    <Label fx:id="statusLabel" layoutX="20" layoutY="590" textFill="GREEN" visible="false" />
   <Button fx:id="LOADEVIDENCEButton" layoutX="95.0" layoutY="105.0" mnemonicParsing="false" onAction="#lOADEVIDENCEOnAction" text="LOAD EVIDENCE" />
   <TextArea layoutX="23.0" layoutY="437.0" prefHeight="78.0" prefWidth="288.0" />
   <Button fx:id="BACKButton" layoutX="349.0" layoutY="550.0" mnemonicParsing="false" onAction="#BACKOnAction" text="BACK" />
     <ComboBox fx:id="caseComboBox" layoutX="99.0" layoutY="59.0" prefWidth="200" />
     <Label layoutX="24.0" layoutY="63.0" text="Select Case:" />
     <Label layoutX="24.0" layoutY="381.0" style="-fx-font-weight: bold;" text="PREVIEW:" />
   <Button fx:id="DOWNLOADSELECTEDButton" layoutX="24.0" layoutY="524.0" mnemonicParsing="false" onAction="#DOWNLOADSELECTEDOnAction" text="DOWNLOAD SELECTED" />

</AnchorPane>
