<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="608.0" prefWidth="814.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulatingoperationsofarabmobilecourt.ViewEvidence">
    <Label layoutX="20" layoutY="20" style="-fx-font-weight: bold; -fx-font-size: 18;" text="VIEW SUBMITTED EVIDENCE" />

    
    <HBox layoutX="20" layoutY="60" spacing="10">
        <Label text="Select Case:" />
        <ComboBox fx:id="caseComboBox" prefWidth="200" />
    </HBox>


    <TableView fx:id="evidenceTable" layoutX="20.0" layoutY="160.0" prefHeight="195.0" prefWidth="722.0">
        <columns>
            <TableColumn fx:id="fileNameCol" prefWidth="200" text="File Name" />
            <TableColumn fx:id="typeCol" prefWidth="100" text="Type" />
            <TableColumn fx:id="dateCol" prefWidth="150" text="Submitted Date" />
            <TableColumn fx:id="sizeCol" prefWidth="100" text="Size" />
            <TableColumn fx:id="actionsCol" prefWidth="210" text="Actions" />
        </columns>
    </TableView>


    <VBox layoutX="20" layoutY="410" spacing="5">
        <Label style="-fx-font-weight: bold;" text="PREVIEW:" />
    </VBox>


    <HBox layoutX="20" layoutY="550" spacing="20">
      <Button layoutX="180.0" layoutY="10.0" onAction="#onBackClicked" prefHeight="26.0" prefWidth="147.0" text="DOWNLOAD SELECTED" />
    </HBox>

    <Label fx:id="statusLabel" layoutX="20" layoutY="590" textFill="GREEN" visible="false" />
   <Button layoutX="95.0" layoutY="105.0" mnemonicParsing="false" text="LOAD EVIDENCE" />
   <TextArea layoutX="23.0" layoutY="437.0" prefHeight="78.0" prefWidth="288.0" />
   <Button layoutX="349.0" layoutY="550.0" mnemonicParsing="false" text="BACK" />

</AnchorPane>
