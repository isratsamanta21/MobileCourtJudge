<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="586.0" prefWidth="658.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="COLLECTFIELDEVIDENCE">
    <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="TAG EVIDENCE WITH CASE ID AND OFFICER" />

    <!-- Untagged Evidence Table -->
    <Label layoutX="20.0" layoutY="60.0" style="-fx-font-weight: bold;" text="Untagged Evidence:" />
    <TableView fx:id="evidenceTable" layoutX="20.0" layoutY="90.0" prefHeight="117.0" prefWidth="449.0">
        <columns>
            <TableColumn fx:id="fileNameCol" prefWidth="150.0" text="File Name" />
            <TableColumn fx:id="fileTypeCol" prefWidth="100.0" text="Type" />
            <TableColumn fx:id="uploadDateCol" prefWidth="120.0" text="Upload Date" />
            <TableColumn fx:id="selectCol" prefWidth="80.0" text="Select" />
        </columns>
    </TableView>

    <!-- Status Bar -->
    <Label fx:id="statusLabel" layoutX="20.0" layoutY="460.0" style="-fx-font-style: italic; -fx-text-fill: #7f8c8d;" />

    <!-- Back Button -->
    <Button fx:id="backButton" layoutX="559.0" layoutY="516.0" onAction="#handleBack" text="Back" />

     <Label layoutX="45.0" layoutY="338.0" style="-fx-font-weight: bold;" text="Tagging Details" />

     <Label layoutX="45.0" layoutY="368.0" text="Case ID:" />

     <Label layoutX="47.0" layoutY="402.0" text="Officer:" />

     <Label layoutX="49.0" layoutY="442.0" text="Notes:" />
     <TextField fx:id="caseIdField" layoutX="106.0" layoutY="364.0" prefWidth="200.0" />
     <ComboBox fx:id="officerComboBox" layoutX="106.0" layoutY="398.0" prefWidth="200.0" />
     <TextField fx:id="notesField" layoutX="106.0" layoutY="438.0" prefHeight="25.0" prefWidth="181.0" />
     <Button fx:id="validateButoon" layoutX="306.0" layoutY="438.0" onAction="#validateCaseId" text="Validate" />
   <Button fx:id="cancelButton" layoutX="444.0" layoutY="464.0" mnemonicParsing="false" text="cancel" />
   <Button fx:id="tagevidenceButton" layoutX="517.0" layoutY="464.0" mnemonicParsing="false" text="tag evidence" />

</AnchorPane>
