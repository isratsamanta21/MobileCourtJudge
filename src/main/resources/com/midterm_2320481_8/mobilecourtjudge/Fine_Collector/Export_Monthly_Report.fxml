<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulatingoperationsofarabmobilecourt.ExportMonthlyReport">
    <Label layoutX="163.0" layoutY="14.0" prefHeight="40.0" prefWidth="425.0" text="EXPORT MONTHLY FINE REPORT ">
        <font>
            <Font name="System Bold" size="17.0" />
        </font>
    </Label>
    <Label layoutX="20" layoutY="80" text="Select Month:" />
    <ComboBox fx:id="monthCombo" layoutX="120" layoutY="77" prefWidth="150" />
    <Label layoutX="20" layoutY="120" text="Select Year:" />
    <ComboBox fx:id="yearCombo" layoutX="120" layoutY="117" prefWidth="150" />
    <TableView fx:id="reportsTable" layoutX="54.0" layoutY="160.0" prefHeight="150.0" prefWidth="550.0">
        <columns>
            <TableColumn fx:id="reportIdCol" prefWidth="100" text="Report ID" />
            <TableColumn fx:id="monthCol" prefWidth="150" text="Month" />
            <TableColumn fx:id="totalFinesCol" prefWidth="100" text="Total Fines" />
            <TableColumn fx:id="exportDateCol" prefWidth="150" text="Exported On" />
        </columns>
    </TableView>
    <Label layoutX="20" layoutY="320" text="Export Format:" />
    <ComboBox fx:id="formatCombo" layoutX="120" layoutY="317" prefWidth="150" />
    <Button fx:id="backButton" layoutX="352.0" layoutY="360.0" onAction="#backOnAction" prefWidth="120" text="BACK" />
    <Label fx:id="statusLabel" layoutX="20" layoutY="400" prefWidth="640" />
   <Button fx:id="generateButton" layoutX="54.0" layoutY="360.0" onAction="#generateOnAction" prefWidth="120" text="GENERATE" />
   <Button fx:id="exportButton" layoutX="202.0" layoutY="360.0" onAction="#exportOnAction" prefWidth="120" text="EXPORT" />

</AnchorPane>
