<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="614.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulatingoperationsofarabmobilecourt.SafetyZoneController">

    <!-- Title -->
    <Label layoutX="150.0" layoutY="20.0" text="SAFETY ZONE PLANNING">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <!-- Session -->
    <Label layoutX="30.0" layoutY="70.0" text="Session:" />

    <!-- Zone Map Label -->
    <Label layoutX="30.0" layoutY="110.0" text="Zone Map:" />

    <!-- Zone Map Drawing Area -->
    <TextArea fx:id="zoneMapArea" layoutX="30.0" layoutY="144.0" prefHeight="74.0" prefWidth="284.0" />

    <!-- Restricted Areas -->
    <Label layoutX="30.0" layoutY="250.0" text="Restricted Areas:" />

    <!-- Send Button -->
    <Button fx:id="sendToRabButton" layoutX="200.0" layoutY="300.0" onAction="#sendToRabButtonOnAction" text="SEND TO RAB" />
    <TextField layoutX="132.0" layoutY="246.0" />
    <ComboBox fx:id="sessionComboBox" layoutX="107.0" layoutY="66.0" prefWidth="150.0" />
    <TextField fx:id="zoneMapTextField" layoutX="107.0" layoutY="106.0" />
   <Button fx:id="backButton" layoutX="472.0" layoutY="312.0" mnemonicParsing="false" onAction="#backButtonOnAction" text="Back" />

</AnchorPane>
