<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="400" prefHeight="300">

    <!-- Title -->
    <Label text="ID VERIFICATION" layoutX="130" layoutY="10" font="$x1">
        <font>
            <Font size="16" />
        </font>
    </Label>

    <!-- ComboBox: Scan Mode -->
    <Label text="Scan Mode:" layoutX="20" layoutY="50"/>
    <ComboBox fx:id="scanModeComboBox" layoutX="100" layoutY="45" prefWidth="200">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="QR Code" />
                <String fx:value="Manual Entry" />
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Scan Now Button -->
    <Button fx:id="scanNowButton" text="SCAN NOW" layoutX="150" layoutY="90" prefWidth="100"/>

    <!-- Result Display -->
    <Label text="Result:" layoutX="20" layoutY="140"/>
    <Label fx:id="resultLabel" layoutX="80" layoutY="140" text="✔️ Valid ID (Exp: 12-2025)" />

    <!-- Name -->
    <Label fx:id="nameLabel" layoutX="80" layoutY="170" text="Name: John Doe"/>

    <!-- Case Access -->
    <Label fx:id="caseAccessLabel" layoutX="80" layoutY="200" text="Case Access: #101, #203"/>

    <!-- Grant and Deny Buttons -->
    <Button fx:id="grantEntryButton" text="GRANT ENTRY" layoutX="80" layoutY="240"/>
    <Button fx:id="denyButton" text="DENY" layoutX="200" layoutY="240"/>
</AnchorPane>