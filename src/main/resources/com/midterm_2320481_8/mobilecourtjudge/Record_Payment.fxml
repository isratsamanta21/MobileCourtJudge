<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulatingoperationsofarabmobilecourt.RecordPayment">
    <Label layoutX="62.0" layoutY="31.0" prefHeight="40.0" prefWidth="299.0" text="RECORD FINE PAYMENT ">
        <font>
            <Font name="System Bold" size="17.0" />
        </font>
    </Label>

    <!-- Fines Table -->
    <TableView fx:id="finesTable" layoutX="54.0" layoutY="89.0" prefHeight="192.0" prefWidth="550.0">
        <columns>
            <TableColumn fx:id="caseIdCol" prefWidth="100" text="Case ID" />
            <TableColumn fx:id="offenderCol" prefWidth="150" text="Offender" />
            <TableColumn fx:id="amountCol" prefWidth="100" text="Amount" />
            <TableColumn fx:id="statusCol" prefWidth="150" text="Status" />
        </columns>
    </TableView>

    <!-- Payment Form -->
    <Label layoutX="20" layoutY="320" text="Payment Amount:" />
    <TextField fx:id="paymentAmountField" layoutX="120" layoutY="317" prefWidth="120" />

    <Label layoutX="20" layoutY="360" text="Payment Method:" />
    <ComboBox fx:id="paymentMethodCombo" layoutX="120" layoutY="357" prefWidth="150" promptText="Select method" />

    <Label layoutX="20" layoutY="390" text="Payment Date:" />
    <DatePicker fx:id="paymentDatePicker" layoutX="120" layoutY="387" />

    <Label layoutX="20" layoutY="420" text="Reference:" />
    <TextField fx:id="referenceField" layoutX="120" layoutY="417" prefWidth="200" />

    <!-- Action Buttons -->
    <Button fx:id="submitButton" layoutX="70.0" layoutY="490.0" onAction="#submitOnAction" prefWidth="120" text="SUBMIT" />
    <Button fx:id="backbutton" layoutX="230" layoutY="490" onAction="#backOnAction" prefWidth="120" text="BACK" />

    <!-- Status Message -->
    <Label fx:id="statusLabel" layoutX="20" layoutY="530" prefWidth="640" />

</AnchorPane>
