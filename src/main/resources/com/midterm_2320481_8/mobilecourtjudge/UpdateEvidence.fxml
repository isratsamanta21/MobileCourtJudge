<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="COLLECTFIELDEVIDENCE">
    <Label layoutX="180.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Approve Cases for Court Submission" />

    <!-- Cases Table -->
    <TableView fx:id="casesTable" layoutX="50.0" layoutY="60.0" prefHeight="117.0" prefWidth="477.0">
        <columns>
            <TableColumn fx:id="caseIdColumn" prefWidth="100.0" text="Case ID" />
            <TableColumn fx:id="caseTitleColumn" prefWidth="150.0" text="Case Title" />
            <TableColumn fx:id="evidenceStatusColumn" prefWidth="100.0" text="Evidence Status" />
            <TableColumn fx:id="approvalStatusColumn" prefWidth="150.0" text="Approval Status" />
        </columns>
    </TableView>

    <!-- Action Buttons -->
    <Button fx:id="reviewEvidenceButton" layoutX="80.0" layoutY="200.0" prefWidth="140.0" text="Review Evidence" />

    <!-- Status Label -->
    <Label fx:id="statusLabel" layoutX="50.0" layoutY="310.0" prefHeight="50.0" prefWidth="500.0" />
   <Button fx:id="requestchangesButton" layoutX="395.0" layoutY="200.0" prefWidth="140.0" text="Request Changes" />
   <Button fx:id="approvecaseButton" layoutX="241.0" layoutY="200.0" prefWidth="140.0" text="Approve Case" />
   <Button fx:id="backButton" layoutX="488.0" layoutY="322.0" mnemonicParsing="false" text="Back" />

</AnchorPane>
