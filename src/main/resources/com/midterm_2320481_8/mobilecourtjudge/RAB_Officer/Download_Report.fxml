<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulatingoperationsofarabmobilecourt.DownloadReport">
    <Label layoutX="180.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Download Court Session Reports" />

    <!-- Session Selection -->
    <Label layoutX="50.0" layoutY="60.0" text="Select Session:" />
    <ComboBox fx:id="sessionComboBox" layoutX="150.0" layoutY="57.0" onAction="#sessionOnAction" prefWidth="200.0" />

    <!-- Report Details -->
    <Label layoutX="50.0" layoutY="100.0" text="Case ID:" />
    <Label fx:id="caseIdLabel" layoutX="150.0" layoutY="100.0" />

    <Label layoutX="50.0" layoutY="130.0" text="Judge:" />
    <Label fx:id="judgeLabel" layoutX="150.0" layoutY="130.0" />

    <Label layoutX="50.0" layoutY="160.0" text="Date:" />
    <Label fx:id="dateLabel" layoutX="150.0" layoutY="160.0" />

    <Label layoutX="50.0" layoutY="190.0" text="Duration:" />
    <Label fx:id="durationLabel" layoutX="150.0" layoutY="190.0" />

    <!-- Report Title Field -->
    <Label layoutX="50.0" layoutY="220.0" text="Report Title:" />
    <TextField fx:id="reportTitleField" layoutX="150.0" layoutY="217.0" prefHeight="26.0" prefWidth="150.0" />

    <!-- Format Selection -->
    <Label layoutX="50.0" layoutY="250.0" text="Format:" />
    <RadioButton fx:id="excelRadio" layoutX="220.0" layoutY="250.0" text="Excel" />
    <RadioButton fx:id="wordRadio" layoutX="300.0" layoutY="250.0" text="Word" />
    <Button fx:id="back" layoutX="320.0" layoutY="290.0" onAction="#backOnAction" prefWidth="150.0" text="Back" />

    <!-- Status Message -->
    <Label fx:id="statusLabel" layoutX="50.0" layoutY="330.0" prefHeight="50.0" prefWidth="500.0" />
   <RadioButton fx:id="pDFRadio1" layoutX="158.0" layoutY="250.0" text="PDF" />
   <Button fx:id="generateReport" layoutX="115.0" layoutY="290.0" onAction="#generateReportOnAction" prefWidth="150.0" text="Generate Report" />
   <Button fx:id="loadSession" layoutX="368.0" layoutY="57.0" onAction="#loadSessionOnAction" prefWidth="150.0" text="Load Session" />
   <TextField fx:id="caseIDField" layoutX="150.0" layoutY="96.0" />
   <TextField fx:id="judgeField" layoutX="150.0" layoutY="126.0" />
   <TextField fx:id="dateField" layoutX="150.0" layoutY="156.0" />
   <TextField fx:id="durationField" layoutX="150.0" layoutY="187.0" />

</AnchorPane>
