<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulatingoperationsofarabmobilecourt.Ton8">
    <Label layoutX="130.0" layoutY="20.0" text="REPORT SUSPICIOUS ACTIVITY">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <!-- Location -->
    <Label layoutX="30.0" layoutY="70.0" text="Location:" />
    <TextField fx:id="locationTextField" layoutX="110.0" layoutY="66.0" prefHeight="25.0" prefWidth="87.0" />

    <!-- Time -->
    <Label layoutX="30.0" layoutY="110.0" text="Date:" />

    <!-- Description -->
    <Label layoutX="30.0" layoutY="150.0" text="Description:" />
    <TextArea fx:id="descriptionTextArea" layoutX="30.0" layoutY="175.0" prefHeight="53.0" prefWidth="203.0" />

    <!-- Attach Evidence Button -->
    <Button fx:id="attachEvidenceButton" layoutX="19.0" layoutY="249.0" onAction="#attachEvidenceOnAction" text="ATTACH EVIDENCE" />

    <!-- Submit Button -->
    <Button fx:id="submitReportButton" layoutX="271.0" layoutY="200.0" onAction="#submitReportButtonOnAction" text="SUBMIT REPORT" />
   <Button fx:id="backButton" layoutX="473.0" layoutY="321.0" mnemonicParsing="false" onAction="#backButtonOnAction" text="Button" />
   <DatePicker fx:id="reportsuspeciousactivityDatePicker" layoutX="103.0" layoutY="106.0" prefHeight="25.0" prefWidth="131.0" />

</AnchorPane>
