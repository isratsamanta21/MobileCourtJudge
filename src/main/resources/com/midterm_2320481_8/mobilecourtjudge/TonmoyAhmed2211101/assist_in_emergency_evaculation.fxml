<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="418.0" prefWidth="617.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulatingoperationsofarabmobilecourt.">
    <Label layoutX="140.0" layoutY="20.0" text="EMERGENCY EVACUATION">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <!-- Type -->
    <Label layoutX="30.0" layoutY="70.0" text="Type:" />

    <!-- Location -->
    <Label layoutX="30.0" layoutY="110.0" text="Location:" />
    <Label fx:id="affectedLabel" layoutX="110.0" layoutY="150.0" />

    <!-- Evacuation Route -->
    <Label layoutX="30.0" layoutY="190.0" text="Evacuation Route:" />
    <TextArea fx:id="evacuationRouteArea" layoutX="30.0" layoutY="215.0" prefHeight="60.0" prefWidth="245.0" />

    <!-- Activate Alert Button -->
    <Button fx:id="activateAlertButton" layoutX="110.0" layoutY="294.0" onAction="#activeAlertButtonOnAction" style="-fx-font-weight: bold;" text=" ACTIVATE ALERT" />
    <ComboBox fx:id="locationAnchorPane" layoutX="114.0" layoutY="106.0" prefHeight="9.0" prefWidth="133.0" />
    <ComboBox fx:id="typeAnchorPane" layoutX="114.0" layoutY="66.0" prefHeight="17.0" prefWidth="123.0" />
    <Button fx:id="backButton" layoutX="509.0" layoutY="306.0" mnemonicParsing="false" onAction="#backButtonOnAction" text="Back" />


</AnchorPane>
