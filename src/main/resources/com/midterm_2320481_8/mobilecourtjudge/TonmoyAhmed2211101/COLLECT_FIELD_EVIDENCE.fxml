<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="587.0" prefWidth="649.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CONTROLLER_NAME">
    <Label layoutX="20" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="COLLECT FIELD EVIDENCE" />

    <!-- Case Selection -->
    <Label fx:id="caseidlabel" layoutX="20" layoutY="60" style="-fx-font-weight: bold;" text="Case ID:" />
    <ComboBox fx:id="caseComboBox" layoutX="80" layoutY="55" prefWidth="200" />
    <Button fx:id="refreshlistButton" layoutX="290" layoutY="55" onAction="#refreshCaseList" text="Refresh List" />

    <!-- Separator Line -->
    <Line endX="560" layoutX="20" layoutY="85" stroke="#cccccc" />

    <!-- Evidence Files Section -->
    <Label layoutX="20" layoutY="100" style="-fx-font-weight: bold;" text="Evidence Files:" />
    <TableView fx:id="evidenceTable" layoutX="20" layoutY="120" prefHeight="135.0" prefWidth="401.0">
        <columns>
            <TableColumn fx:id="fileNameColumn" prefWidth="150" text="File Name" />
            <TableColumn fx:id="typeColumn" prefWidth="80" text="Type" />
            <TableColumn fx:id="sizeColumn" prefWidth="80" text="Size" />
            <TableColumn fx:id="actionsColumn" prefWidth="120" text="Actions" />
        </columns>
    </TableView>

    <!-- Description -->
    <Label layoutX="20" layoutY="370" style="-fx-font-weight: bold;" text="Description:" />
    <TextArea fx:id="descriptionArea" layoutX="20" layoutY="390" prefHeight="54.0" prefWidth="453.0" />

    <!-- Status Bar -->
    <Label fx:id="statusLabel" layoutX="20" layoutY="570" style="-fx-font-style: italic; -fx-text-fill: #7f8c8d;" />
   <Button fx:id="cancelButton" layoutX="352.0" layoutY="469.0" onAction="#refreshCaseList" text="Cancel" />
   <Button fx:id="uploadevifenceButton" layoutX="421.0" layoutY="469.0" onAction="#refreshCaseList" text="Upload Evidence" />
   <Button fx:id="addphotoButton" layoutX="28.0" layoutY="281.0" onAction="#refreshCaseList" text="Add Photo" />
   <Button fx:id="addaudrioButton" layoutX="228.0" layoutY="281.0" onAction="#refreshCaseList" text="Add Audio" />
   <Button fx:id="addvideoButton" layoutX="123.0" layoutY="281.0" onAction="#refreshCaseList" text="Add Video" />
   <Button fx:id="backButton" layoutX="557.0" layoutY="469.0" mnemonicParsing="false" text="Back" />

</AnchorPane>
